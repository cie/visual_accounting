.timeline
  width 100%
  height 40px

.accountMap
  background #001030
  width 100%
  height 400px

.account
  .name
    text-anchor middle
    visibility hidden
    font-size 18px
    transform translate(0,-30)
  .amount
    visibility hidden
  &:hover
    circle
      stroke rgba(210,210,210,1)
      stroke-width 1px
    .name
      visibility visible
    .amount
      visibility visible
    
  
.optionsBar
  float right
  padding 10px

.currencyChooser 
  select
    width auto

body
  background #e8e8e8
